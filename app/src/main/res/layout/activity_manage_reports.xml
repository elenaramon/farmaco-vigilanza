<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto" >
    <data>

    </data>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".views.MainActivity"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E6E6E6">

                <!-- CardView add CF -->
                <android.support.v7.widget.CardView
                    android:id="@+id/activity_manage_reports_card_view_cf"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/spacing_medium">

                        <!-- CF Label -->
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginBottom="@dimen/spacing_medium">
                            <EditText android:id="@+id/activity_manage_reports_input_cf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:hint="@string/activity_add_edit_reports_edit_text_cf" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- Button add CF -->
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/activity_manage_reports_btn_add_cf"
                            app:theme="@style/contained_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:padding="12dp"
                            android:layout_gravity="right"
                            android:text="@string/activity_add_edit_reports_button_add" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/activity_manage_reports_card_view_data_patient_title"
                    style="@style/primary_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_huge"
                    android:layout_margin="@dimen/spacing_medium"
                    android:gravity="center_vertical"
                    android:text="@string/activity_add_edit_reports_text_view_patient_data"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <!-- CardView data patient -->
                <android.support.v7.widget.CardView
                    android:id="@+id/activity_manage_reports_card_view_data_patient"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/spacing_medium">

                        <!-- Birthdate Label -->
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginBottom="@dimen/spacing_medium">
                            <EditText android:id="@+id/activity_manage_reports_input_birthdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:hint="@string/activity_add_edit_reports_edit_text_birthdate"
                                android:enabled="false" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- Province Label -->
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginBottom="@dimen/spacing_medium">
                            <EditText android:id="@+id/activity_manage_reports_input_province"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:hint="@string/activity_add_edit_reports_edit_text_province"
                                android:enabled="false" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- Job Label -->
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginBottom="@dimen/spacing_medium">
                            <EditText android:id="@+id/activity_manage_reports_input_job"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:hint="@string/activity_add_edit_reports_edit_text_job"
                                android:enabled="false" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- Button modify patient -->
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/activity_manage_reports_btn_modify_patient"
                            app:theme="@style/contained_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:padding="12dp"
                            android:layout_gravity="right"
                            android:text="@string/activity_add_edit_reports_button_modify" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/activity_manage_reports_card_view_factor_title"
                    style="@style/primary_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_huge"
                    android:layout_margin="@dimen/spacing_medium"
                    android:gravity="center_vertical"
                    android:text="@string/activity_add_edit_reports_text_view_factor"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <!-- CardView factor -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_manage_reports_recycler_view_factor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/activity_manage_reports_card_view_therapy_title"
                    style="@style/primary_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_huge"
                    android:layout_margin="@dimen/spacing_medium"
                    android:gravity="center_vertical"
                    android:text="@string/activity_add_edit_reports_text_view_therapy"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <!-- CardView therapy -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_manage_reports_recycler_view_therapy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/activity_manage_reports_card_view_adverse_reaction_title"
                    style="@style/primary_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_huge"
                    android:layout_margin="@dimen/spacing_medium"
                    android:gravity="center_vertical"
                    android:text="@string/activity_add_edit_reports_text_view_factor"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <!-- CardView adverse reaction -->
                <android.support.v7.widget.CardView
                    android:id="@+id/activity_manage_reports_card_view_adverse_reaction"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/spacing_medium">

                        <!-- Name Label -->
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginBottom="@dimen/spacing_medium">
                            <EditText android:id="@+id/activity_manage_reports_input_adverse_reaction_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:hint="@string/activity_add_edit_reports_edit_text_name" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- Level of gravity Label -->
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginBottom="@dimen/spacing_medium">
                            <EditText android:id="@+id/activity_manage_reports_input_adverse_reaction_level_gravity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:hint="@string/activity_add_edit_reports_edit_text_level_gravity" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- Description Label -->
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginBottom="@dimen/spacing_medium">
                            <EditText
                                android:id="@+id/activity_manage_reports_input_adverse_reaction_description"
                                android:gravity="top|left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/activity_add_edit_reports_edit_text_description"
                                android:minLines="1"
                                android:lines="5"
                                android:inputType="textMultiLine"
                                android:scrollHorizontally="false" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- Button add adverse reaction -->
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/activity_manage_reports_btn_add_adverse_reaction"
                            app:theme="@style/contained_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:padding="12dp"
                            android:layout_gravity="right"
                            android:text="@string/activity_add_edit_reports_button_add" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>